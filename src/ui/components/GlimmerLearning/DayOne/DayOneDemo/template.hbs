<div class="day-one-demo">
  <Slider
    @title="fluid slider without slides"
  />
  <hr/>
  <Slider
    @title="fluid slider with one slide"
    @slides={{slide}}
    @slidesLength={{slide.length}}
  />
  <hr/>
  <Slider
    @title="fluid slider with many slides"
    @slides={{slides}}
    @slidesLength={{slides.length}}
  />
  <hr/>
  <Slider
      @title="fluid slider with custom slides component"
      @slidesLength={{3}}
      as |slideWidth slideHeight|
    >
    <li class="slider__slide" style="width: {{slideWidth}}px; height: {{slideHeight}}px">
      <p>custom component 1</p>
    </li>
    <li class="slider__slide" style="width: {{slideWidth}}px; height: {{slideHeight}}px">
      <p>custom component 2</p>
    </li>
    <li class="slider__slide" style="width: {{slideWidth}}px; height: {{slideHeight}}px">
      <p>custom component 3</p>
    </li>
  </Slider>
  <hr/>
  <div style="width: 20rem; margin: 0 auto;">
    <Slider
      @title="fluid slider ratio:1/1"
      @slides={{slides}}
      @slidesLength={{slides.length}}
      @ratio={{ratio_1_1}}
    />
    <hr/>
    <Slider
      @title="fluid slider ratio:4/3"
      @slides={{slides}}
      @slidesLength={{slides.length}}
      @ratio={{ratio_4_3}}
    />
    <hr/>
    <Slider
      @title="fluid slider ratio:3/2"
      @slides={{slides}}
      @slidesLength={{slides.length}}
      @ratio={{ratio_3_2}}
    />
    <hr/>
    <Slider
    @title="fluid slider ratio:16/10"
    @slides={{slides}}
    @slidesLength={{slides.length}}
    @ratio={{ratio_16_10}}
    />
    <hr/>
    <Slider
      @title="fluid slider ratio:16/9"
      @slides={{slides}}
      @slidesLength={{slides.length}}
      @ratio={{ratio_16_9}}
    />
  </div>
</div>
